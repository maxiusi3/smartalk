# SmarTalk Mobile App Environment Variables
# Note: Expo requires EXPO_PUBLIC_ prefix for client-side environment variables

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:3001/api/v1
EXPO_PUBLIC_API_TIMEOUT=10000

# CDN Configuration
EXPO_PUBLIC_CDN_BASE_URL=https://cdn.smartalk.app
EXPO_PUBLIC_CDN_BACKUP_URL=https://backup-cdn.smartalk.app
EXPO_PUBLIC_CDN_STATIC_URL=https://static.smartalk.app

# Video Configuration
VIDEO_QUALITY_AUTO=true
VIDEO_DEFAULT_QUALITY=medium
VIDEO_BUFFER_SIZE=15000
VIDEO_MAX_BUFFER_SIZE=50000

# Audio Configuration
AUDIO_DEFAULT_BITRATE=96
AUDIO_HIGH_QUALITY_BITRATE=128
AUDIO_LOW_QUALITY_BITRATE=64

# Performance Configuration
EXPO_PUBLIC_PERFORMANCE_MONITORING_ENABLED=true
EXPO_PUBLIC_ANALYTICS_ENABLED=true
EXPO_PUBLIC_ERROR_REPORTING_ENABLED=true

# Cache Configuration
CACHE_TTL_VIDEOS=86400
CACHE_TTL_AUDIO=86400
CACHE_TTL_SUBTITLES=604800
CACHE_TTL_API=3600

# Development Configuration
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_MOCK_API_ENABLED=false

# Feature Flags
EXPO_PUBLIC_FEATURE_OFFLINE_MODE=true
EXPO_PUBLIC_FEATURE_ADAPTIVE_QUALITY=true
EXPO_PUBLIC_FEATURE_PRELOADING=true
EXPO_PUBLIC_FEATURE_CDN_OPTIMIZATION=true
