# SmarTalk V2 Deployment Environment Variables
# This file contains the production deployment configuration

# ===== DEPLOYMENT CONFIGURATION =====
DEPLOYMENT_ENV=production
DOCKER_REGISTRY=smartalk
IMAGE_TAG=v2.0.0
V2_FEATURES_ENABLED=true
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')

# ===== DATABASE CONFIGURATION =====
DATABASE_URL="postgresql://smartalk_user:smartalk_v2_secure_password@localhost:5432/smartalk_v2_prod"
POSTGRES_DB=smartalk_v2_prod
POSTGRES_USER=smartalk_user
POSTGRES_PASSWORD=smartalk_v2_secure_password

# ===== REDIS CONFIGURATION =====
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_v2_secure_password

# ===== SECURITY =====
JWT_SECRET=smartalk_v2_jwt_super_secret_key_change_in_production_2025
JWT_EXPIRES_IN=7d

# ===== 讯飞 (IFLYTEK) API - DEMO CONFIGURATION =====
# Note: These are demo values for deployment testing
# Replace with actual credentials in production
IFLYTEK_APP_ID=demo_app_id_12345
IFLYTEK_API_KEY=demo_api_key_67890
IFLYTEK_API_SECRET=demo_api_secret_abcdef

# ===== ELSA API - DEMO CONFIGURATION =====
# Note: These are demo values for deployment testing
# Replace with actual credentials in production
ELSA_API_KEY=demo_elsa_api_key_xyz789

# ===== CDN CONFIGURATION - DEMO =====
CDN_BASE_URL=https://cdn.smartalk.com
CLOUDFLARE_API_TOKEN=demo_cloudflare_token_123
CLOUDFLARE_ZONE_ID=demo_zone_id_456

# ===== AWS S3 CONFIGURATION - DEMO =====
AWS_ACCESS_KEY_ID=demo_aws_access_key
AWS_SECRET_ACCESS_KEY=demo_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=smartalk-v2-content-demo

# ===== ANALYTICS - DEMO =====
MIXPANEL_TOKEN=demo_mixpanel_token
GOOGLE_ANALYTICS_ID=demo_ga_id
SENTRY_DSN=demo_sentry_dsn

# ===== MONITORING =====
GRAFANA_PASSWORD=grafana_v2_admin_password

# ===== FEATURE FLAGS =====
FEATURE_STORY_DRIVEN_LEARNING=true
FEATURE_DUAL_MODE_PLAYER=true
FEATURE_FOCUS_MODE=true
FEATURE_RESCUE_MODE=true
FEATURE_5_KEYWORD_VALIDATION=true
FEATURE_PRONUNCIATION_DUAL_API=true
FEATURE_ASSET_VALIDATION=true
FEATURE_SUBTITLE_HIGHLIGHTING=true
FEATURE_CONTENT_WIZARD=true
FEATURE_MAGIC_MOMENT=true

# ===== PERFORMANCE TARGETS =====
VIDEO_LOADING_TARGET=1000
API_RESPONSE_TARGET=1500
STARTUP_TIME_TARGET=2000

# ===== CONTENT VALIDATION =====
ENFORCE_5_KEYWORDS=true
ENFORCE_30_SECOND_DURATION=true
DURATION_TOLERANCE=0.5

# ===== ERROR RECOVERY =====
FOCUS_MODE_TRIGGER_THRESHOLD=2
RESCUE_MODE_TRIGGER_THRESHOLD=3
